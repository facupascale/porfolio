---
const personalImageAlt = 'Facundo Pascale'

import { getLangFromUrl, useTranslations } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const firstPDescription = t('aboutme.description_1')
const secondPDescription = t('aboutme.description_2')
const thirdPDescription = t('aboutme.description_3')
---

<article
  class="flex flex-col ml-2 sm:ml-1 md:ml-0 items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
>
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-orange-500 dark:[&>p>strong]:text-orange-300 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
  >
    <p set:html={firstPDescription} />

    <p set:html={secondPDescription} />

    <p set:html={thirdPDescription} />
  </div>
